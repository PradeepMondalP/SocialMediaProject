<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#FFFBFCFD"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_friend_request_profile_image"
        android:layout_width="85dp"
        android:src="@drawable/profile"
        android:layout_margin="7dp"
        android:layout_height="85dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_friend_request_user_name"
                android:layout_width="0dp"
                android:text="UserName"
                android:padding="5dp"
                android:layout_weight="9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:id="@+id/id_all_user_online_icon"
                android:src="@drawable/online"
                android:layout_height="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/id_friend_request_accept_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="accept "
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/id_friend_request_decline_button"
                android:layout_width="0dp"
                android:text="decline"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>