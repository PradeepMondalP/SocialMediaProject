<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFAEDED"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_logo_p"
        android:background="@drawable/signup_photo"
        android:layout_height="250dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/id_logo_p"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:text="Sign Up here"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"
                android:background="@drawable/input"
                android:padding="4dp"
                android:drawableLeft="@drawable/email"
                android:id="@+id/id_email_signUp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:hint="Enter Password"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/password"
                android:padding="4dp"
                android:id="@+id/id_pass_signUp"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:hint="verify Password"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/password"
                android:padding="4dp"
                android:id="@+id/id_confirm_pass_signUp"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="Create Account"

                android:padding="6dp"
                android:background="@drawable/small_background"
                android:shadowColor="@android:color/darker_gray"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:id="@+id/id_register_signUp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/id_login_signUp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Already have account ? Log in"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>