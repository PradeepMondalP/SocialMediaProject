<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A6466"
    tools:context=".FindFriendsActivity">


    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/id_find_friend_app_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/id_myLayout"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/id_find_friend_app_bar"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_find_friend_simple_text"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/white"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:padding="15dp"
            android:text="serach for people and friends "
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/id_find_friend_search_box_input"
            android:layout_width="200dp"
            android:hint="search here"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="18sp"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:background="@drawable/input"
            android:layout_below="@+id/id_find_friend_simple_text"
            android:layout_height="70dp" />

        <ImageButton
            android:id="@+id/id_find_friend_search_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/id_find_friend_simple_text"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/id_find_friend_search_box_input"
            android:layout_marginTop="9dp"
            android:src="@drawable/search" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/id_find_friend_result_list"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="#FFFBFCFD"
        android:layout_below="@+id/id_myLayout"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>