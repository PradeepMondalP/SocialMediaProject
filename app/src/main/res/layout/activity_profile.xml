<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorprofile"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="300dp"
                android:layout_marginTop="5dp"
                android:id="@+id/id_rofile_profile_image"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                android:layout_marginBottom="4dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/id_rofile_profile_name"
                android:layout_width="match_parent"
                android:text="Profile Name"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_below="@+id/id_rofile_profile_image"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_rofile_user_name"
                android:layout_width="match_parent"
                android:text="user Name"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:layout_below="@+id/id_rofile_profile_name"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_rofile_profile_status"
                android:layout_width="match_parent"
                android:text="hey i will show you the status "
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/id_rofile_user_name"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/id_rofile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Country"
                android:layout_below="@+id/id_rofile_profile_status"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_rofile_dob"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Date Of Birth"
                android:layout_marginTop="12dp"
                android:padding="2dp"
                android:layout_below="@id/id_rofile_country"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_rofile_gender"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="gender"
                android:layout_marginTop="12dp"
                android:padding="2dp"
                android:layout_below="@id/id_rofile_dob"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/id_rofile_gender"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/id_no_of_posts"
                    android:shadowColor="@android:color/darker_gray"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:padding="4dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/small_background"
                    android:text="No of posts"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/id_no_of_friends"
                    android:layout_width="0dp"
                    android:padding="4dp"
                    android:layout_marginLeft="5dp"
                    android:shadowColor="@android:color/darker_gray"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/small_background"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:text="No of Friends"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>